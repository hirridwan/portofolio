                                <div class="p-6 grid grid-cols-1 md:grid-cols-2 gap-10">
                                    <div class="space-y-3">
                                        <div class="text-[10px] text-green-500 font-bold uppercase mb-2 underline tracking-widest">A. Service Langsung</div>
                                        {serviceDirect.map(s => (
                                            <div class="flex justify-between items-center border-b border-neutral-800/50 pb-2">
                                                <span class="text-sm text-neutral-300">{s.name}</span>
                                                <span class="text-xs font-bold text-green-400 font-mono tracking-wide">{s.price}</span>
                                            </div>
                                        ))}
                                    </div>
                                    <div class="space-y-3">
                                        <div class="text-[10px] text-green-500 font-bold uppercase mb-2 underline tracking-widest">B. Maintenance Remote</div>
                                        {serviceRemote.map(s => (
                                            <div class="flex justify-between items-center border-b border-neutral-800/50 pb-2">
