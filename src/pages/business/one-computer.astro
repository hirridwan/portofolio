                                <div class="p-6 grid grid-cols-1 md:grid-cols-2 gap-x-8 gap-y-3">
                                    {unitProducts.map(p => (
                                        <div class="flex justify-between items-center border-b border-neutral-800/50 pb-2">
                                            <span class="text-sm text-neutral-300">{p.name}</span>
                                            <span class="text-xs font-bold text-green-400 font-mono tracking-wide">{p.price}</span>
                                        </div>
                                    ))}
