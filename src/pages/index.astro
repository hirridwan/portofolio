            </section>

            <section id="career" class="scroll-mt-32">
                <div class="flex items-center gap-4 mb-8">
                    <h2 class="text-2xl font-bold text-white font-tech">03 // RIWAYAT KARIR</h2>
                    <div class="h-[1px] bg-neutral-800 flex-grow"></div>
                </div>

                <div class="space-y-0 border-l border-neutral-800 ml-3">
                    {experience.map((job) => (
                        <div class="relative pl-8 pb-10 last:pb-0 group">
                            <div class="absolute -left-[5px] top-2 w-2.5 h-2.5 rounded-full bg-neutral-800 group-hover:bg-cyan-400 transition-colors border border-neutral-950"></div>
                            
                            <div class="flex flex-col sm:flex-row sm:items-baseline sm:justify-between gap-1 mb-2">
                                <h3 class="text-lg font-bold text-white group-hover:text-cyan-400 transition-colors">{job.role}</h3>
                                <span class="text-xs font-mono text-cyan-600 bg-cyan-900/10 px-2 py-1 rounded border border-cyan-900/30">{job.period}</span>
                            </div>
                            <div class="text-sm font-tech text-neutral-500 mb-2 uppercase tracking-wide">{job.company}</div>
                            <p class="text-sm text-neutral-400 leading-relaxed max-w-2xl">{job.desc}</p>
                        </div>
                    ))}
                </div>
            </section>

            <section id="certs" class="scroll-mt-32">
                <div class="flex items-center gap-4 mb-8">
                    <h2 class="text-2xl font-bold text-white font-tech">04 // SERTIFIKASI BNSP</h2>
                    <div class="h-[1px] bg-neutral-800 flex-grow"></div>
                </div>

                <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-4 gap-4">
                    {certificates.map((cert) => (
                        <div class="p-4 rounded border border-neutral-800 bg-neutral-900/30 hover:bg-neutral-800/50 hover:border-yellow-500/30 transition-all group flex flex-col justify-between h-full">
                            <div class="mb-4">
                                <div class="w-8 h-8 rounded bg-neutral-800 flex items-center justify-center mb-3 group-hover:bg-yellow-900/20 text-neutral-500 group-hover:text-yellow-400">
                                    <svg xmlns="http://www.w3.org/2000/svg" class="w-4 h-4" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><path d="M12 22s8-4 8-10V5l-8-3-8 3v7c0 6 8 10 8 10z"></path></svg>
                                </div>
                                <h3 class="text-sm font-semibold text-neutral-200 leading-snug">{cert}</h3>
                            </div>
                            <div class="text-[10px] font-mono text-neutral-500 uppercase flex items-center gap-1">
