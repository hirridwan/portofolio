        </ul>
    </nav>

    <main class="min-h-screen flex flex-col items-center px-6 relative overflow-hidden bg-neutral-950 text-neutral-300 selection:bg-cyan-500/30 pb-32">
        
        <div class="fixed inset-0 z-0 bg-[linear-gradient(to_right,#80808012_1px,transparent_1px),linear-gradient(to_bottom,#80808012_1px,transparent_1px)] bg-[size:24px_24px]"></div>
        <div class="fixed inset-0 z-0 bg-[radial-gradient(circle_800px_at_50%_-30%,#1e1e2e,transparent)]"></div>

        <div class="max-w-4xl w-full z-10 space-y-32 pt-32">
            
            <section class="space-y-6">
                <div class="inline-flex items-center gap-2 px-3 py-1 rounded-full border border-neutral-800 bg-neutral-900/50 backdrop-blur-md">
                    <span class="w-2 h-2 rounded-full bg-cyan-500 animate-pulse"></span>
                    <span class="text-xs font-tech tracking-widest text-cyan-500 uppercase">System Online</span>
                </div>
                
                <h1 class="text-4xl md:text-7xl font-bold tracking-tight text-white leading-[1.1]">
                    Hai! Saya, <br />
                    <span class="text-transparent bg-clip-text bg-gradient-to-r from-cyan-400 to-purple-500">
                        Ridwan Maulana, S.Kom.
                    </span>
                </h1>
                
                <p class="text-lg text-neutral-400 max-w-2xl leading-relaxed border-l-2 border-neutral-800 pl-6">
                    Saya seorang <strong>Web & Android Developer</strong> sekaligus <strong>Guru Informatika</strong>. 
                    Membangun ekosistem digital yang presisi, aman, dan inovatif.
                </p>

                <div class="flex flex-wrap gap-4 pt-4">
                    <a href="https://wa.me/6285860565852" target="_blank" class="group relative px-6 py-3 bg-white text-black font-semibold rounded-lg overflow-hidden flex items-center gap-2">
                        <div class="absolute inset-0 w-full h-full bg-cyan-400 opacity-0 group-hover:opacity-100 transition-opacity duration-300 blur-lg"></div>
                        <span class="relative z-10">WhatsApp Saya</span>
                    </a>
                    <a href="mailto:rmfhdofficial@gmail.com" class="px-6 py-3 border border-neutral-800 text-neutral-300 rounded-lg hover:border-neutral-500 hover:text-white transition-colors">
                        Email Saya
                    </a>
                </div>
            </section>

            <section id="portofolio" class="scroll-mt-32 space-y-12">
                
                <div class="space-y-6">
                    <div class="flex items-center gap-4">
                        <h2 class="text-2xl font-bold text-white font-tech">01 // PORTOFOLIO</h2>
                        <div class="h-[1px] bg-neutral-800 flex-grow"></div>
                    </div>
                    
                    <h3 class="text-sm font-mono text-cyan-500 uppercase tracking-widest pl-1">>> 1.1 PROYEK SOFTWARE</h3>
                    <div class="grid grid-cols-1 md:grid-cols-3 gap-6">
                        {webProjects.map((project) => {
                            // TENTUKAN LINK TUJUAN
                            let linkUrl = "#";
                            let isClickable = false;

                            if (project.title === "Absensi One") {
                                linkUrl = "/projects/absensi-one";
                                isClickable = true;
                            } else if (project.title === "CBT Client One") {
                                linkUrl = "/projects/cbt-client-one";
                                isClickable = true;
                            }

                            return (
                                <a 
                                    href={linkUrl}
                                    class={`group relative p-6 rounded-xl border border-neutral-800 bg-neutral-900/40 hover:bg-neutral-800/60 transition-all duration-500 hover:scale-[1.02] hover:border-cyan-500/30 flex flex-col h-full justify-between gap-6 ${isClickable ? "cursor-pointer" : "cursor-default"}`}
                                >
                                    <div>
                                        <h3 class="text-xl font-bold text-neutral-200 group-hover:text-cyan-400 mb-2">{project.title}</h3>
                                        <p class="text-sm text-neutral-500 leading-relaxed">{project.desc}</p>
                                    </div>
                                    <div class="flex justify-between items-center border-t border-neutral-800 pt-4">
                                        <span class="text-[10px] font-mono text-cyan-600 uppercase tracking-wider border border-cyan-900/30 bg-cyan-900/10 px-2 py-1 rounded">
                                            {project.tag}
                                        </span>
                                        {/* Tampilkan teks 'Lihat Detail' jika bisa diklik */}
                                        {isClickable && (
                                            <span class="text-[10px] font-bold text-cyan-500 group-hover:underline flex items-center gap-1">
                                                Lihat Detail
                                                <svg xmlns="http://www.w3.org/2000/svg" class="w-3 h-3" fill="none" viewBox="0 0 24 24" stroke="currentColor"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M14 5l7 7m0 0l-7 7m7-7H3" /></svg>
                                            </span>
                                        )}
                                    </div>
                                </a>
                            );
                        })}
                    </div>
                </div>

                <div class="space-y-6">
                    <h3 class="text-sm font-mono text-purple-500 uppercase tracking-widest pl-1">>> 1.2 PROYEK AI</h3>
                    <div class="grid grid-cols-1 gap-6">
                        {aiProjects.map((project) => (
                            <div class="p-6 rounded-xl border border-purple-500/20 bg-purple-900/10 relative overflow-hidden group hover:border-purple-500/40 transition-colors">
                                <div class="absolute -right-20 -top-20 w-64 h-64 bg-purple-500/10 rounded-full blur-[80px] pointer-events-none group-hover:bg-purple-500/20 transition-all"></div>
                                <h3 class="text-xl font-bold text-white mb-2 relative z-10">{project.title}</h3>
                                <p class="text-sm text-neutral-400 relative z-10">{project.desc}</p>
                                <div class="mt-4 text-[10px] font-mono text-purple-400 relative z-10 border border-purple-500/30 bg-purple-500/10 px-2 py-1 rounded w-fit">
