import Layout from '../layouts/Layout.astro';

// ==============================================
// 1. CONFIG URL
// ==============================================
const API_URL = "https://cms.rmfhd.my.id"; // Ganti ke http://127.0.0.1:8003 jika testing lokal

// ==============================================
// 2. DEFAULT DATA (Fallback)
// ==============================================
let profile = {
    name: "Ridwan Maulana",
    description: "Developer & Educator.",
    quote: "Building digital products with purpose.",
    image: "https://placehold.co/400", 
    whatsapp: "6285860565852",
    email: "rmfhdofficial@gmail.com"
};

let webProjects = [];
let aiProjects = [];
let business = [];
let experience = [];
let education = [];
let certificates = [];
let trainings = [];
let techGroups = [];

// ==============================================
// 3. FETCH DATA
// ==============================================
try {
  const resContent = await fetch(`${API_URL}/api/content`);
  if (resContent.ok) {
      const content = await resContent.json();
      
      // Update Profil
      if (content.profile) {
          profile = {
              ...content.profile,
              image: content.profile.image.startsWith('http') ? content.profile.image : `${API_URL}/storage/${content.profile.image}`
          };
      }

      // Update Project
      if (content.projects && Array.isArray(content.projects)) {
          webProjects = content.projects.filter((p: any) => p.type === 'dev');
          aiProjects = content.projects.filter((p: any) => p.type === 'ai');
      }

      // Update Lainnya
      if (content.business) business = content.business;
      if (content.experience) experience = content.experience;
      if (content.education) education = content.education;
      if (content.certificates) certificates = content.certificates;
      if (content.trainings) trainings = content.trainings;
      if (content.skills) techGroups = content.skills;
  }
} catch (error) {
  console.error("Gagal fetch data:", error);
}

