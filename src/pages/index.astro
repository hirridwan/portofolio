---

<Layout title={`${profile.name} | Portfolio`}>
    
    <nav class="fixed top-6 left-1/2 -translate-x-1/2 z-50 w-auto">
        <ul class="flex items-center gap-1 p-1.5 rounded-full bg-neutral-900/90 backdrop-blur-md border border-neutral-800 shadow-xl">
            <li><a href="#about" class="px-4 py-2 rounded-full text-xs font-medium text-neutral-400 hover:text-white hover:bg-neutral-800 transition-all">About</a></li>
            <li><a href="#work" class="px-4 py-2 rounded-full text-xs font-medium text-neutral-400 hover:text-white hover:bg-neutral-800 transition-all">Work</a></li>
            <li><a href="#stack" class="px-4 py-2 rounded-full text-xs font-medium text-neutral-400 hover:text-white hover:bg-neutral-800 transition-all">Stack</a></li>
            <li><a href="#contact" class="px-4 py-2 rounded-full bg-white text-black text-xs font-bold hover:bg-neutral-200 transition-all">Contact</a></li>
        </ul>
    </nav>

    <main class="min-h-screen bg-neutral-950 text-neutral-200 selection:bg-neutral-800 selection:text-white pb-32">
        
        <div class="max-w-5xl mx-auto px-6 pt-32 space-y-24">
            
            <section id="about" class="grid grid-cols-1 md:grid-cols-4 gap-4 auto-rows-[minmax(180px,auto)]">
                
                <div class="md:col-span-2 md:row-span-2 p-8 rounded-3xl bg-neutral-900 border border-neutral-800 flex flex-col justify-between relative group overflow-hidden">
                    <div class="absolute inset-0 bg-gradient-to-br from-neutral-800/50 to-transparent opacity-0 group-hover:opacity-100 transition-opacity duration-500"></div>
                    <div class="relative z-10">
                        <div class="flex items-center gap-2 mb-6">
                            <span class="relative flex h-2 w-2">
                              <span class="animate-ping absolute inline-flex h-full w-full rounded-full bg-green-400 opacity-75"></span>
                              <span class="relative inline-flex rounded-full h-2 w-2 bg-green-500"></span>
                            </span>
                            <span class="text-xs font-medium text-neutral-400 uppercase tracking-wide">Available for Work</span>
                        </div>
                        <h1 class="text-4xl font-bold text-white leading-tight mb-4">
                            Hi, I'm {profile.name}.
                        </h1>
                        <p class="text-neutral-400 leading-relaxed text-lg">
                            {profile.description}
                        </p>
                    </div>
                    <div class="relative z-10 mt-8">
                        <p class="text-sm text-neutral-500 italic">"{profile.quote}"</p>
                    </div>
                </div>

                <div class="md:col-span-1 md:row-span-2 rounded-3xl bg-neutral-900 border border-neutral-800 overflow-hidden relative group">
                    <img src={profile.image} alt="Profile" class="w-full h-full object-cover transition-transform duration-700 group-hover:scale-105 grayscale group-hover:grayscale-0" />
                </div>

                <div class="md:col-span-1 p-6 rounded-3xl bg-neutral-900 border border-neutral-800 flex flex-col justify-center gap-4 hover:border-neutral-700 transition-colors">
                    <div class="text-xs text-neutral-500 uppercase font-medium">Connect</div>
                    <div class="flex gap-4">
                        {socialLinks.map(link => (
                            <a href={link.url} target="_blank" class="text-white hover:text-neutral-400 transition-colors">
                                <svg class="w-6 h-6" fill="currentColor" viewBox="0 0 24 24"><path d={link.icon}/></svg>
                            </a>
                        ))}
                    </div>
                </div>

                <div class="md:col-span-1 p-6 rounded-3xl bg-neutral-900 border border-neutral-800 flex flex-col justify-center hover:border-neutral-700 transition-colors">
                    <div class="text-4xl font-bold text-white mb-1">
                        {webProjects.length + aiProjects.length}+
                    </div>
                    <div class="text-xs text-neutral-500 uppercase font-medium">Completed Projects</div>
                </div>

            </section>

            <section id="work" class="space-y-12">
                <div class="flex items-end justify-between border-b border-neutral-900 pb-4">
                    <h2 class="text-2xl font-bold text-white">Selected Work</h2>
                    <span class="text-sm text-neutral-500">Web & Mobile Development</span>
                </div>

                <div class="grid grid-cols-1 md:grid-cols-2 gap-8">
                    {webProjects.length > 0 ? webProjects.map((project: any) => (
                        <a href={`/projects/${project.slug}`} class="group space-y-4 cursor-pointer">
                            <div class="aspect-video rounded-2xl bg-neutral-900 border border-neutral-800 overflow-hidden relative">
                                <img src={project.image} alt={project.title} class="w-full h-full object-cover transition-transform duration-500 group-hover:scale-105" />
                            </div>
                            <div>
                                <h3 class="text-lg font-bold text-white group-hover:underline decoration-neutral-600 underline-offset-4">{project.title}</h3>
                                <p class="text-sm text-neutral-500 line-clamp-2 mt-1">{project.description ? project.description.replace(/<[^>]*>?/gm, '') : ''}</p>
                            </div>
                        </a>
                    )) : (
                        <div class="col-span-2 py-12 text-center text-neutral-600 italic">Project data is empty.</div>
                    )}
                </div>

                {aiProjects.length > 0 && (
                    <div class="pt-12">
                        <div class="flex items-end justify-between border-b border-neutral-900 pb-4 mb-8">
                            <h2 class="text-2xl font-bold text-white">AI Experiments</h2>
                            <span class="text-sm text-neutral-500">Generative & Machine Learning</span>
                        </div>
                        <div class="grid grid-cols-1 md:grid-cols-3 gap-6">
                            {aiProjects.map((project: any) => (
                                <a href={`/projects/${project.slug}`} class="group space-y-3 cursor-pointer">
                                    <div class="aspect-square rounded-2xl bg-neutral-900 border border-neutral-800 overflow-hidden relative">
                                        <img src={project.image} alt={project.title} class="w-full h-full object-cover transition-transform duration-500 group-hover:scale-105" />
                                        <div class="absolute top-3 right-3 px-2 py-1 bg-black/60 backdrop-blur rounded text-[10px] text-white font-mono">AI</div>
                                    </div>
                                    <div>
                                        <h3 class="text-base font-bold text-white group-hover:text-neutral-300 transition-colors">{project.title}</h3>
                                        <p class="text-xs text-neutral-500 line-clamp-2">{project.description ? project.description.replace(/<[^>]*>?/gm, '') : ''}</p>
                                    </div>
                                </a>
                            ))}
                        </div>
                    </div>
                )}
            </section>

            <section class="grid grid-cols-1 md:grid-cols-2 gap-16">
                <div>
                    <h3 class="text-sm font-bold text-neutral-500 uppercase tracking-widest mb-8">Career History</h3>
                    <div class="space-y-8 border-l border-neutral-900 pl-6 ml-2">
                        {experience.length > 0 ? experience.map((job: any) => (
                            <div class="relative group">
                                <span class="absolute -left-[29px] top-1.5 w-3 h-3 rounded-full bg-neutral-800 border-2 border-neutral-950 group-hover:bg-white transition-colors"></span>
                                <div class="text-sm text-neutral-500 mb-1 font-mono">{job.period}</div>
                                <h4 class="text-lg font-bold text-white">{job.role}</h4>
                                <div class="text-sm text-neutral-400 mb-2">{job.company}</div>
                                <p class="text-sm text-neutral-500 leading-relaxed">{job.description}</p>
                            </div>
                        )) : <p class="text-neutral-600 italic">No experience data.</p>}
                    </div>
                </div>

                <div>
                    <h3 class="text-sm font-bold text-neutral-500 uppercase tracking-widest mb-8">Education</h3>
                    <div class="space-y-6">
                        {education.length > 0 ? education.map((edu: any) => (
                            <div class="p-6 rounded-2xl bg-neutral-900/50 border border-neutral-900 hover:border-neutral-700 transition-colors">
                                <div class="flex justify-between items-start mb-2">
                                    <h4 class="text-base font-bold text-white">{edu.campus}</h4>
                                    <span class="text-xs font-mono text-neutral-500 bg-neutral-800 px-2 py-1 rounded">{edu.period}</span>
                                </div>
                                <div class="text-sm text-neutral-400 mb-4">{edu.degree} - {edu.major}</div>
                                <div class="flex flex-wrap gap-2">
                                    {Array.isArray(edu.highlights) && edu.highlights.map((h: string) => (
                                        <span class="text-[10px] text-neutral-500 border border-neutral-800 px-2 py-0.5 rounded">{h}</span>
                                    ))}
                                </div>
                            </div>
                        )) : <p class="text-neutral-600 italic">No education data.</p>}
                    </div>
                </div>
            </section>

            <section id="stack" class="space-y-12">
                 <div class="grid grid-cols-1 md:grid-cols-3 gap-12">
                    
                    <div class="md:col-span-2">
                         <h3 class="text-sm font-bold text-neutral-500 uppercase tracking-widest mb-6">Technical Skills</h3>
                         <div class="grid grid-cols-1 sm:grid-cols-2 gap-6">
                            {techGroups.map((group: any) => (
                                <div>
                                    <h4 class="text-white font-medium mb-3 flex items-center gap-2">
                                        <div class="w-1 h-4 bg-neutral-700 rounded-full"></div>
                                        {group.category}
                                    </h4>
                                    <div class="flex flex-wrap gap-2">
                                        {Array.isArray(group.items) && group.items.map((item: string) => (
                                            <span class="px-3 py-1 bg-neutral-900 border border-neutral-800 text-xs text-neutral-400 rounded hover:text-white hover:border-neutral-600 transition-colors cursor-default">
                                                {item}
                                            </span>
                                        ))}
                                    </div>
                                </div>
                            ))}
                         </div>
                    </div>

                    <div class="md:col-span-1">
                        <h3 class="text-sm font-bold text-neutral-500 uppercase tracking-widest mb-6">Ventures</h3>
                        <div class="space-y-4">
                            {business.map((biz: any) => (
                                <a href={biz.link || '#'} target="_blank" class="block p-5 rounded-2xl bg-neutral-900 border border-neutral-800 hover:bg-white hover:text-black group transition-all">
                                    <div class="flex justify-between items-center mb-2">
                                        <h4 class="font-bold">{biz.title}</h4>
                                        <svg class="w-4 h-4 opacity-0 group-hover:opacity-100 transition-opacity" fill="none" viewBox="0 0 24 24" stroke="currentColor"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8l4 4m0 0l-4 4m4-4H3" /></svg>
                                    </div>
                                    <p class="text-xs text-neutral-500 group-hover:text-neutral-600 line-clamp-2">{biz.description}</p>
                                </a>
                            ))}
                        </div>
                    </div>

                 </div>
            </section>

            <footer id="contact" class="pt-20 border-t border-neutral-900">
                <div class="flex flex-col md:flex-row justify-between items-center gap-8">
                    <div class="text-center md:text-left">
                        <h2 class="text-2xl font-bold text-white mb-2">Let's work together.</h2>
                        <p class="text-neutral-500 text-sm">Have a project in mind? Reach out.</p>
                        <div class="flex gap-4 mt-6 justify-center md:justify-start">
                            <a href={`mailto:${profile.email}`} class="px-5 py-2 rounded-lg bg-white text-black text-sm font-bold hover:bg-neutral-200 transition-colors">Email Me</a>
                            <a href={`https://wa.me/${profile.whatsapp}`} class="px-5 py-2 rounded-lg border border-neutral-800 text-white text-sm font-bold hover:bg-neutral-900 transition-colors">WhatsApp</a>
                        </div>
                    </div>
                    <div class="text-right text-xs text-neutral-600">
                        <p>&copy; 2026 {profile.name}.</p>
                        <p class="mt-1">Built with Laravel & Astro.</p>
                    </div>
                </div>
            </footer>

        </div>
    </main>
</Layout>