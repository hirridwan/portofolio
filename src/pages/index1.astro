---
import Layout from '../layouts/Layout.astro';

// --- DATA (SAMA SEPERTI SEBELUMNYA) ---
const experience = [
  {
    period: "2025 — NOW",
    role: "Guru Informatika",
    company: "SMP Negeri 1 Bantarkalong",
    desc: "Membentuk fondasi literasi digital & computational thinking."
  },
  {
    period: "2023 — 2024",
    role: "Staf IT",
    company: "Bank CiJ (PT BPR Cipatujah)",
    desc: "Maintenance infrastruktur perbankan & keamanan data nasabah."
  },
  {
    period: "2021 — 2022",
    role: "Guru Informatika",
    company: "SMK Muhammadiyah Tasikmalaya",
    desc: "Pengembangan kurikulum RPL & TKJ berbasis industri."
  }
];

const certificates = [
  "Junior Web Developer", "Analyst Program", "Desainer Grafis Muda", "Junior Office Operator"
];

const projects = [
  { title: "Absensi One", cat: "IOT / WEB", desc: "Geo-Location & Face Recog." },
  { title: "CBT Client One", cat: "SECURITY", desc: "Ujian Online Anti-Curang." },
  { title: "Quran One", cat: "MOBILE", desc: "App Al-Quran & Doa Harian." },
  { title: "AI KDRAMA", cat: "AI PROMPT", desc: "Visualisasi Realisme Artis." },
  { title: "One Computer", cat: "BUSINESS", desc: "IT Solution & Hardware." },
];
---

<Layout title="Ridwan Maulana, S.Kom. | V2 Dashboard">
	<main class="min-h-screen bg-[#050505] text-neutral-300 selection:bg-cyan-500/30 font-sans p-4 md:p-8">
		
		<div class="fixed inset-0 z-0 bg-[radial-gradient(ellipse_at_top_left,_var(--tw-gradient-stops))] from-cyan-900/10 via-[#050505] to-[#050505]"></div>
		<div class="fixed inset-0 z-0 opacity-20 bg-[url('https://grainy-gradients.vercel.app/noise.svg')] brightness-100 contrast-150"></div>

		<div class="relative z-10 max-w-7xl mx-auto grid grid-cols-1 lg:grid-cols-[380px_1fr] gap-6 items-start">
			
			<aside class="lg:sticky lg:top-8 space-y-4">
				
				<div class="p-8 rounded-3xl border border-white/5 bg-white/[0.02] backdrop-blur-xl shadow-2xl relative overflow-hidden group">
					<div class="absolute -top-24 -right-24 w-48 h-48 bg-cyan-500/20 rounded-full blur-3xl group-hover:bg-cyan-500/30 transition-all duration-700"></div>
					
					<div class="relative">
						<div class="w-20 h-20 rounded-2xl bg-gradient-to-br from-neutral-800 to-black border border-white/10 flex items-center justify-center mb-6 shadow-inner">
							<span class="font-tech text-3xl text-cyan-400 font-bold">RM</span>
						</div>
						
						<h1 class="text-3xl font-bold text-white leading-tight">
							Ridwan Maulana, <br/>
							<span class="text-neutral-500 text-2xl">S.Kom.</span>
						</h1>
						
						<div class="mt-4 flex flex-col gap-2">
							<div class="inline-flex items-center gap-2 text-sm font-medium text-cyan-400 bg-cyan-950/30 px-3 py-1.5 rounded-lg w-fit border border-cyan-500/20">
								<span class="relative flex h-2 w-2">
								  <span class="animate-ping absolute inline-flex h-full w-full rounded-full bg-cyan-400 opacity-75"></span>
								  <span class="relative inline-flex rounded-full h-2 w-2 bg-cyan-500"></span>
								</span>
								Open for Collaboration
							</div>
							<p class="text-neutral-400 text-sm leading-relaxed mt-2">
								Digital Architect & Educator. Menggabungkan kode, keamanan sistem, dan pendidikan untuk membangun masa depan.
							</p>
						</div>

						<div class="grid grid-cols-2 gap-3 mt-8">
							<a href="https://wa.me/6285860565852" class="col-span-2 flex items-center justify-center gap-2 bg-white text-black py-3 rounded-xl font-bold hover:bg-cyan-500 hover:text-white transition-all text-sm">
								WhatsApp Me
							</a>
							<a href="mailto:rmfhdofficial@gmail.com" class="flex items-center justify-center gap-2 bg-white/5 border border-white/10 py-3 rounded-xl hover:bg-white/10 transition-all text-sm">
								Email
							</a>
							<div class="flex items-center justify-center gap-2 bg-white/5 border border-white/10 py-3 rounded-xl text-neutral-500 text-sm cursor-not-allowed">
								Github
							</div>
						</div>
					</div>
				</div>

				<div class="p-6 rounded-3xl border border-white/5 bg-white/[0.02] backdrop-blur-md">
					<h3 class="text-xs font-tech text-neutral-500 uppercase tracking-widest mb-4">Core Stack</h3>
					<div class="flex flex-wrap gap-2">
						{['Laravel', 'Astro', 'Android', 'IoT', 'Security'].map(tech => (
							<span class="text-xs border border-white/10 px-3 py-1 rounded-full text-neutral-400 bg-white/5">{tech}</span>
						))}
					</div>
				</div>
			</aside>


			<div class="space-y-6">
				
				<div class="grid grid-cols-2 md:grid-cols-4 gap-4">
					<div class="p-5 rounded-2xl bg-white/[0.03] border border-white/5 text-center">
						<div class="text-2xl font-bold text-white">4+</div>
						<div class="text-[10px] uppercase tracking-wider text-neutral-500 font-tech">Years Exp</div>
					</div>
					<div class="p-5 rounded-2xl bg-white/[0.03] border border-white/5 text-center">
						<div class="text-2xl font-bold text-cyan-400">05</div>
						<div class="text-[10px] uppercase tracking-wider text-neutral-500 font-tech">Major Projects</div>
					</div>
					<div class="p-5 rounded-2xl bg-white/[0.03] border border-white/5 text-center col-span-2 md:col-span-2 flex items-center justify-between px-8">
						<div class="text-left">
							<div class="text-xl font-bold text-white">BNSP</div>
							<div class="text-[10px] uppercase tracking-wider text-neutral-500 font-tech">Certified Pro</div>
						</div>
						<svg class="w-8 h-8 text-yellow-500 opacity-80" fill="currentColor" viewBox="0 0 20 20"><path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd"/></svg>
					</div>
				</div>

				<div class="p-8 rounded-3xl border border-white/5 bg-white/[0.02]">
					<h2 class="text-xl font-bold text-white mb-6 flex items-center gap-2">
						<span class="w-1 h-6 bg-cyan-500 rounded-full"></span>
						Career History
					</h2>
					<div class="space-y-8 relative before:absolute before:inset-0 before:ml-2 before:w-0.5 before:-translate-x-px before:bg-gradient-to-b before:from-transparent before:via-neutral-800 before:to-transparent">
						{experience.map((exp) => (
							<div class="relative pl-8 group">
								<div class="absolute left-0 top-1.5 w-4 h-4 rounded-full border-2 border-neutral-800 bg-[#050505] group-hover:border-cyan-500 transition-colors"></div>
								<div class="flex flex-col sm:flex-row sm:justify-between sm:items-baseline mb-1">
									<h3 class="text-lg font-semibold text-white">{exp.role}</h3>
									<span class="text-xs font-mono text-neutral-500">{exp.period}</span>
								</div>
								<div class="text-sm text-cyan-400 mb-2">{exp.company}</div>
								<p class="text-sm text-neutral-400 leading-relaxed">{exp.desc}</p>
							</div>
						))}
					</div>
				</div>

				<div class="grid grid-cols-1 md:grid-cols-2 gap-4">
					<div class="md:col-span-2 pt-4 pb-2">
						<h2 class="text-xl font-bold text-white flex items-center gap-2">
							<span class="w-1 h-6 bg-purple-500 rounded-full"></span>
							Selected Works
						</h2>
					</div>

					{projects.map((proj, i) => (
						<div class={`p-6 rounded-3xl border border-white/5 bg-white/[0.03] hover:bg-white/[0.06] transition-all group relative overflow-hidden ${i === 0 ? 'md:col-span-2 bg-gradient-to-br from-cyan-900/20 to-transparent' : ''}`}>
							<div class="absolute top-0 right-0 p-4 opacity-50 group-hover:opacity-100 transition-opacity">
								<svg class="w-6 h-6 text-white -rotate-45" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M14 5l7 7m0 0l-7 7m7-7H3"></path></svg>
							</div>
							
							<div class="flex flex-col h-full justify-between gap-8">
								<div class="pt-2">
									<span class="text-[10px] font-bold tracking-widest px-2 py-1 rounded border border-white/10 text-neutral-400 uppercase bg-black/20 mb-3 inline-block">
										{proj.cat}
									</span>
									<h3 class={`font-bold text-white mb-2 ${i === 0 ? 'text-2xl' : 'text-lg'}`}>{proj.title}</h3>
									<p class="text-sm text-neutral-400">{proj.desc}</p>
								</div>
							</div>
						</div>
					))}
				</div>

				<div class="p-6 rounded-3xl border border-white/5 bg-white/[0.02]">
					<h2 class="text-sm font-tech text-neutral-500 uppercase tracking-widest mb-4">BNSP Licenses</h2>
					<div class="flex flex-wrap gap-3">
						{certificates.map(cert => (
							<div class="flex items-center gap-2 px-3 py-2 rounded-xl bg-neutral-900/50 border border-neutral-800 text-xs text-neutral-300">
								<span class="w-1.5 h-1.5 rounded-full bg-green-500 shadow-[0_0_8px_rgba(34,197,94,0.5)]"></span>
								{cert}
							</div>
						))}
					</div>
				</div>

				<footer class="text-center text-xs text-neutral-600 py-8 font-mono">
					<p>SYSTEM ONLINE // V2.0 DASHBOARD</p>
					<p>&copy; 2025 RIDWAN MAULANA</p>
				</footer>

			</div>
		</div>
	</main>
</Layout>