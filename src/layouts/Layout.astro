---
interface Props {
	title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="id" class="scroll-smooth">
	<head>
		<meta charset="UTF-8" />
		<meta name="description" content="Web & Mobile Developer x Teacher" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
		<link rel="preconnect" href="https://fonts.googleapis.com">
		<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
		<link href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;600&family=Space+Grotesk:wght@300;500;700&display=swap" rel="stylesheet">
		<title>{title}</title>
	</head>
	<body class="bg-neutral-950 text-neutral-300 font-sans antialiased selection:bg-cyan-500/30 selection:text-cyan-200">
		<div class="fixed inset-0 z-[-1] bg-[linear-gradient(to_right,#80808012_1px,transparent_1px),linear-gradient(to_bottom,#80808012_1px,transparent_1px)] bg-[size:24px_24px]"></div>
		<div class="fixed inset-0 z-[-1] bg-[radial-gradient(circle_800px_at_50%_-30%,#1e1e2e,transparent)]"></div>
		
		<slot />
	</body>
</html>

<style is:global>
	/* Custom Utilities */
	.font-tech {
		font-family: 'Space Grotesk', sans-serif;
	}
	
	/* Hide scrollbar for cleaner look */
	::-webkit-scrollbar {
		width: 8px;
	}
	::-webkit-scrollbar-track {
		background: #0a0a0a;
	}
	::-webkit-scrollbar-thumb {
		background: #333;
		border-radius: 4px;
	}
</style>